@media (max-width: 620px){
    .container{
        width: 100%;
    }
    
    /** STYLING THE ABOUT SECTION ****/
    .about-flex {
        flex-direction: column;
        align-items: center;
        
    }
    .education, .experience, .certification {
        height: 250px;
        width: 400px;
        border: 1px solid black;
        padding: 10px 20px;
        line-height: 30px;
        margin: 0 0 40px 0;
        cursor: pointer;
    }
    /** STYLING THE PROJECT SECTION ***/
    .project-sets {
        flex-direction: column;
        align-items: center;
    }
    .project {
        width: 40%;
        min-width: 400px;
    }   
    .contact {
        width: 100%;
        padding: 20px 10px;
    }
    .contact-btn {
        padding: 10px 40px;
        flex-direction: column;
        align-items: flex-start;
        text-align: center;
    }
}
/*** mobile ****/
@media(max-width: 480px){
    /**** STYLING THE ABOUT SECTION ****/
    .about-section {
        width: 100%;
        padding: 20px 10px;;
    } 
    .about-writeup > h1, .project-writeup > h1, .contact-writeup > h1 {
        font-size: 30px;
    }
    .education, .experience, .certification {
        height: 250px;
        width: 300px;
        border: 1px solid black;
        padding: 10px 20px;
        line-height: 30px;
        margin: 0 0 40px 0;
        cursor: pointer;
    }
    .education h1, .experience h1, .certification h1{
        font-size: 35px;
        margin: 0 0 10px 0;
    } 
    .education h3, .experience h3, .certification h3{
        font-size:  30px;
    }
    .education p, .experience p, .certification p{ 
        font-size: 18px;
    }
    /***** STYLING THE PROJECTS SECTION *****/
    .project-section {
       padding: 20px 10px;
       cursor: pointer;
    }
    .project {
        width: 23%;
        min-width: 300px;
        padding: 20px;
        border: 1px solid black;
        margin: 0 0 40px 0;
        text-align: center;
    }

}




