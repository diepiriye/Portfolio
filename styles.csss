@media (max-width: 1148px){
    .education, .experience, .certification{
        height: 200px;
        border-radius: 10px;
        width: 350px;
        border: 1px solid black;
        padding: 10px 20px;
        line-height: 30px;
        margin: 0 0 40px 0;
        cursor: pointer;
    }
}
@media (max-width: 1024px){
    .menu{
        font-size: 16px;
        font-weight: 600;
        margin-left: 100px;
    }
    /*** styling the the project ***/
    .project-section {
        padding: 20px 60px;
    }

}
@media (max-width: 900px){
    .menu{
        font-size: 16px;
        font-weight: 600;
        margin-left: 150px;
    }
    .logo h3 {
        font-size:30px;
        margin: 0 0 0 5px;
    }
    /**** STYLING THE ABOUT SECTION ***/
    .about-section {
        width: 100%;
        padding: 20px 70px;
    }
    .about-flex {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }
    .education, .experience, .certification {
    width: 300px;
    margin: 0 0 40px 0;
    
    }
    /**** STYLING THE PROJECT SECTION*****/
    .project-section {
        width: 100%;
        padding: 20px 70px;
        cursor: pointer;
    }
    .project {
        width: 23%;
        min-width: 300px;
        
    }

}
@media (max-width: 850px){
    /*STYLING THE HERO SECTION ****/
    .hero-section{
        padding: 40px 20px;   
    }
    .hero{
        text-align: center;
    }
    .hero-writeup {
        margin: 10px 0 0 0;
        line-height: 25px;
    }
    .hero-writeup h6{
        font-size: 18px;
    }
    .hero-writeup h2 {
        font-size: 25px;
    }
    .hero-writeup h4 {
        font-size: 20px;
    }
    
    .icons {
        width: 80px;
        align-items: center;
        justify-content: space-evenly;
        margin: 10px auto 0 auto;
        
    }
}
